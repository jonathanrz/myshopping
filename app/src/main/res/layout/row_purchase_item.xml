<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Card"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/min_spacing">

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/name"
				android:layout_marginRight="@dimen/min_spacing"
				android:layout_marginEnd="@dimen/min_spacing"/>

			<TextView
				android:id="@+id/row_purchase_item_product_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorPrimary"/>
		</TableRow>

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/quantity"
				android:layout_marginRight="@dimen/min_spacing"
				android:layout_marginEnd="@dimen/min_spacing"/>

			<TextView
				android:id="@+id/row_purchase_item_quantity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorPrimary"/>
		</TableRow>

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/amount"
				android:layout_marginRight="@dimen/min_spacing"
				android:layout_marginEnd="@dimen/min_spacing"/>

			<TextView
				android:id="@+id/row_purchase_item_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorPrimary"/>
		</TableRow>

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/total"
				android:layout_marginRight="@dimen/min_spacing"
				android:layout_marginEnd="@dimen/min_spacing"/>

			<TextView
				android:id="@+id/row_purchase_item_total"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/colorPrimary"/>
		</TableRow>

	</TableLayout>
</android.support.v7.widget.CardView>